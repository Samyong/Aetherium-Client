<Window x:Class="Aetherium_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aetherium Launcher" Height="768" Width="1366" WindowStyle="None" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush>
            <ImageBrush.ImageSource>
                <BitmapImage UriSource="/images/project_window.bmp"/>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Window.Background>
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="26" Margin="1323,0,0,0" Stroke="#4C000000" VerticalAlignment="Top" Width="43" Fill="#19F7F7F7"/>
        <Label x:Name="CloseButton" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" MouseLeftButtonDown="Label_MouseLeftButtonDown" Content="X" HorizontalAlignment="Left" Margin="1345,-3,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.5,0.5" ToolTip="Exit" Foreground="#FFC1B800" Height="29" Cursor="Hand"/>
        <Label x:Name="MinimizeButton" MouseEnter="Label_MouseEnter" MouseLeave="Label_MouseLeave" MouseLeftButtonDown="Label_MouseLeftButtonDown_1" Content="_" HorizontalAlignment="Left" Margin="1323,-6,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.5,0.5" ToolTip="Minimize" Foreground="#FFC1B800" Height="32" Cursor="Hand"/>
    </Grid>
</Window>
